#version 440 core

layout(location=0) out vec4 oColor;

in vec4 tColor;
in float tTexSlot;
in vec2 tTexCoord;

layout(binding=0) uniform sampler2D TEXTURE_SLOTS[$NUM_TEXTURE_SLOTS];

void main() {
	if (tTexSlot < 0) {
		oColor = tColor;
	} else {
		oColor = tColor * texture(TEXTURE_SLOTS[int(tTexSlot)], tTexCoord);
	}
}
